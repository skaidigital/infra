{
  "name": "infra",
  "version": "1.0.0",
  "description": "Automated Sanity to Cloudflare R2 backup workflow",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "backup": "bun run src/backup/index.ts",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@aws-sdk/lib-storage": "^3.895.0",
    "@sanity/cli": "^3.45.0",
    "@sanity/client": "^7.11.1",
    "@sanity/export": "^4.0.1",
    "tar": "^7.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/node": "^22.0.0",
    "@types/tar": "^6.1.0",
    "lefthook": "^1.13.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}